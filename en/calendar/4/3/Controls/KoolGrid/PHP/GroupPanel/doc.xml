	<properties>

		<property name="PanelCssClass">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set css class for group panel.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set css class for group panel.
				]]>
			</longdesc>
			<defaultvalue>true</defaultvalue>
			<samplecode>
<![CDATA[
<?php				
	$grid->MasterTable->GroupPanel->PanelCssClass = "MyPanelCss";
?>
...
<style type="css/style">
.MyPanelCss
{
	background:yellow;
}
</style>
]]>
			</samplecode>
			<supportversion>2.0.0.0</supportversion>
		</property>


		<property name="ItemCssClass">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set css class for item in group panel.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set css class for item in group panel.
				]]>
			</longdesc>
			<defaultvalue>true</defaultvalue>
			<samplecode>
<![CDATA[
<?php				
	$grid->MasterTable->GroupPanel->ItemCssClass = "MyGroupPanelItemCss";
?>
...
<style type="css/style">
.MyGroupPanelItemCss
{
	color:green;
}
</style>
]]>
			</samplecode>
			<supportversion>2.0.0.0</supportversion>
		</property>

		<property name="ItemConnector">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set the connector text between two items in group panel.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set the connector text between two items in group panel.
				]]>
			</longdesc>
			<defaultvalue>true</defaultvalue>
			<samplecode>
<![CDATA[
<?php				
	$grid->MasterTable->GroupPanel->ItemConnector = ">";
?>
]]>
			</samplecode>
			<supportversion>2.0.0.0</supportversion>
		</property>

	</properties>
