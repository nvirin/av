	<properties>
		<property name="FormatString">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set format string of datetime.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set format string of datetime.
				]]>
			</longdesc>
			<samplecode>
<![CDATA[
<?php				
...	
	$col = new GridDateTimeColumn();
	$col->DataField = "orderDate";
	$col->FormatString = "M d, Y";
...
?> 
]]>
			</samplecode>
			<supportversion>1.0.0.0</supportversion>
		</property>				

		<property name="Picker">
			<type>KoolDateTimePicker, KoolDatePicker, KoolTimePicker</type>
			<shortdesc>
				<![CDATA[
					Set the datetime picker for column.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Set the datetime picker for column. When column is in editing mode, the datetime picker will show to facilitate user in picking datetime.
				]]>
			</longdesc>
			<samplecode>
<![CDATA[
<?php				
...	
	$column->Picker = new KoolDatePicker();
	$column->Picker->scriptFolder = "KoolControls/KoolCalendar";
	$column->Picker->styleFolder = "default";	
	$column->Picker->DateFormat = "M d, Y";
	$grid->MasterTable->AddColumn($column);
...
?> 
]]>
			</samplecode>
			<supportversion>1.0.0.0</supportversion>
		</property>				

