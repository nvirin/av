	<properties>
		<property name="id">
			<type>string</type>
			<shortdesc>
			   <![CDATA[
		Get id of KoolMenuItem.
			   ]]>
			</shortdesc>
			<longdesc>
			   <![CDATA[
		Get id of KoolMenuItem.
			   ]]>
			</longdesc>
			<samplecode>
			   <![CDATA[
<?php		
	//Not available
?>
			   ]]>
			</samplecode>
			<supportversion>1.0.0.0 </supportversion>
		</property> 

		<property name="Target">
			<type>string</type>
			<shortdesc>
			   <![CDATA[
					Get or set the target of the item.
			   ]]>
			</shortdesc>
			<longdesc>
			   <![CDATA[
					Get or set the target of the item. The target would be "_blank" or any frame's name.
			   ]]>
			</longdesc>
			<samplecode>
			   <![CDATA[
<?php
...
	$item_open = $km->GetItem("open");
	$item_open->Target="_blank"; // Open new window when click.
...
?>
			   ]]>
			</samplecode>
			<supportversion>1.0.0.0 </supportversion>
		</property>
		
		
		<property name="GroupSettings">
			<type>&lt;a href='../GroupSettings/index.php'>GroupSettings&lt;/a></type>
			<shortdesc>
			   <![CDATA[
					Get or set properties of menu item's group settings.
			   ]]>
			</shortdesc>
			<longdesc>
			   <![CDATA[
					Get or set properties of menu item's group settings.
			   ]]>
			</longdesc>
			<samplecode>
			   <![CDATA[
<?php
...
	$item_open = $km->GetItem("open");
	$item_open->GroupSettings->ExpandDirection = "Left";
...
?>
			   ]]>
			</samplecode>
			<supportversion>1.0.0.0 </supportversion>
		</property>		
		
