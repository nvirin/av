	<methods>
		<method name="AddChild">
			<type>KoolMenuItem</type>
			<parameters>
			   <param type="KoolMenuItem" optional="false">$menu_item</param>
			</parameters>
			<shortdesc>
			   <![CDATA[
		Add sub menuitem.
			   ]]>
			</shortdesc>
			<longdesc>
			   <![CDATA[
		Add sub menuitem.
			   ]]>
			</longdesc>
			<samplecode>
			   <![CDATA[
<?php
...
	$item_open = $km->GetItem("item_open");
	$item_sub_open = new KoolMenuItem("item_sub_open");
	$item_open->AddChild($item_sub_open);
...
?>
			   ]]>
			</samplecode>
			<supportversion>1.0.0.0 </supportversion>
		</method> 

		<method name="AddSeparator">
			<type>KoolMenuItem</type>
			<shortdesc>
			   <![CDATA[
		Add a separator.
			   ]]>
			</shortdesc>
			<longdesc>
			   <![CDATA[
		Add a separator.
			   ]]>
			</longdesc>
			<samplecode>
			   <![CDATA[
<?php
...
	$item_open = $km->GetItem("item_open");
	$item_open->AddSeparator();
...
?>
			   ]]>
			</samplecode>
			<supportversion>1.0.0.0 </supportversion>
		</method> 

	</methods>	
