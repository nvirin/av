	<properties>
		
		
		<property name="Locale">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set the locale for currency.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set the locale for currency.
				]]>
			</longdesc>
			<defaultvalue>"en_US"</defaultvalue>
			<samplecode>
<![CDATA[
<?php				
	$col = new GridCurrencyColumn();
	$col->Locale = "en_US";
	$col->FormatString = "%i";
	// Display: USD 133
?> 
]]>
			</samplecode>
			<supportversion>1.0.0.0</supportversion>
		</property>
		
		
		<property name="FormatString">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set format of currency.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
				Get or set format of currency. <a href='http://us2.php.net/manual/en/function.money-format.php' target='_blank'>More info</a> of the format
				]]>
			</longdesc>
			<defaultvalue>"%i"</defaultvalue>
			<samplecode>
<![CDATA[
<?php				
	$col = new GridCurrencyColumn();
	$col->Locale = "en_US";
	$col->FormatString = "%i";
	// Display: USD 133
?> 
]]>
			</samplecode>
			<supportversion>1.0.0.0</supportversion>
		</property>		
