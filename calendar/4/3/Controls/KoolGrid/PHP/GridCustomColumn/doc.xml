	<properties>
		<property name="ItemTemplate">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set the template to render item.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set the template to render item.
				]]>
			</longdesc>
			<samplecode>
<![CDATA[
<?php				
...	
	$col = new GridCustomColumn();
	$col->ItemTemplate = "The customer {customerName} has id = {customerNumber}";
...
?> 
]]>
			</samplecode>
			<supportversion>1.0.0.0</supportversion>
		</property>		

		<property name="EditItemTemplate">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set the template to render item when row is in edit mode.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set the template to render item when row is in edit mode.
				]]>
			</longdesc>
			<samplecode>
<![CDATA[
<?php				
...	
	$col = new GridCustomColumn();
	$col->EditItemTemplate = "<input type='button' value ='Confirm' onclick='javascript:grid_confirm_edit(this)' />";
...
?> 
]]>
			</samplecode>
			<supportversion>1.0.0.0</supportversion>
		</property>		




