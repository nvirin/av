	<properties>

		<property name="TrueText">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set the displaying text when bool value is true.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set the displaying text when bool value is true.
				]]>
			</longdesc>
			<defaultvalue>"True"</defaultvalue>
			<samplecode>
<![CDATA[
<?php				
...	
	$col = new GridBooleanColumn();
	$col->TrueText = "Yes";
	$col->FalseText = "No";
	$grid->MasterPage->AddColumn($col);
...
?> 
]]>
			</samplecode>
			<supportversion>1.5.0.0</supportversion>
		</property>

		<property name="FalseText">
			<type>string</type>
			<shortdesc>
				<![CDATA[
					Get or set the displaying text when bool value is false.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set the displaying text when bool value is false.
				]]>
			</longdesc>
			<defaultvalue>"False"</defaultvalue>
			<samplecode>
<![CDATA[
<?php				
...	
	$col = new GridBooleanColumn();
	$col->TrueText = "Yes";
	$col->FalseText = "No";
	$grid->MasterPage->AddColumn($col);
...
?> 
]]>
			</samplecode>
			<supportversion>1.5.0.0</supportversion>
		</property>


		<property name="UseCheckBox">
			<type>bool</type>
			<shortdesc>
				<![CDATA[
					Get or set whether column uses checkbox to display boolean value.
				]]>
			</shortdesc>
			<longdesc>
				<![CDATA[
					Get or set whether column uses checkbox to display boolean value.
				]]>
			</longdesc>
			<defaultvalue>false</defaultvalue>
			<samplecode>
<![CDATA[
<?php				
...	
	$col = new GridBooleanColumn();
	$col->UseCheckBox = true;
	$grid->MasterPage->AddColumn($col);
...
?> 
]]>
			</samplecode>
			<supportversion>1.5.0.0</supportversion>
		</property>



