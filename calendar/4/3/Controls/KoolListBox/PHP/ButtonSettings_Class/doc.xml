	<properties>
		<property name="ShowDelete">
			<type>bool</type>
			<defaultvalue>false</defaultvalue>
			<shortdesc>
			   <![CDATA[
					Get or set whether delete button is shown.
			   ]]>
			</shortdesc>
			<longdesc>
			   <![CDATA[
					Get or set whether delete button is shown.
			   ]]>
			</longdesc>
			<samplecode>
			   <![CDATA[
<?php
...
	$listbox->ButtonSettings->ShowDelete = true;
...
?>
			   ]]>
			</samplecode>
			<supportversion>1.0.0.0 </supportversion>
		</property>

		<property name="ShowReorder">
			<type>bool</type>
			<defaultvalue>false</defaultvalue>
			<shortdesc>
			   <![CDATA[
					Get or set whether move up and move down buttons are shown.
			   ]]>
			</shortdesc>
			<longdesc>
			   <![CDATA[
					Get or set whether move up and move down buttons are shown.
			   ]]>
			</longdesc>
			<samplecode>
			   <![CDATA[
<?php
...
	$listbox->ButtonSettings->ShowReorder = true;
...
?>
			   ]]>
			</samplecode>
			<supportversion>1.0.0.0 </supportversion>
		</property>


